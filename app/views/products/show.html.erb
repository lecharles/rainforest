<h1>Your Product id# <%= @product.id %></h1>

<%= link_to 'Back to basics', products_path %>

<p><%= @product.name %>, <%= @product.description %></p>
<p>â‚¬<%= @product.formatted_price %></p>
<p><%= link_to 'Edit this product', edit_product_path(@product) %></p>

<h3>Reviews</h3>

  <p>Yes! You are reading reviews for <%= @product.name %></p>

  <% @product.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> Written by <%= review.user.name %> available at <%= review.user.email %> Back then in: <%= review.created_at %></em>
      <% end %>
    </p>
  <% end %>

<% if current_user %>
  <h4>New Review</h4>

  <%= form_for([@product, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% else %>
  <p>yoO <%= link_to "You gotta log in", new_session_path %> to add a review.</p>
<% end %>

